<h1>New trouble</h1>

<%= form_for :trouble, url: troubles_path, :html => { :multipart => true } do |f| %>
  <% if @trouble.errors.any? %>
    <div id="errorExplanation">
      <h2><%= pluralize(@trouble.errors.count, "error") %> prohibited this post from being saved</h2>
      <ul>
        <% @trouble.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %> <br/>

  <%= f.label :location %>
  <%= f.text_field :location %> <br/>

  <%= f.label :description %>
  <%= f.text_field :description %> <br/>

  <%= f.label :latitude %>
  <%= f.text_field :latitude %> <br/>

  <%= f.label :longitude %>
  <%= f.text_field :longitude %> <br/>

  <%= f.label :address %>
  <%= f.text_field :address %> <br/>

  <%= f.collection_select :city_id, City.order(:name),:id, :name, :prompt => "Select a city" %>

  <%= f.file_field :photo %>

  <%= f.submit %>
<% end %>

<%= link_to 'Back', troubles_path %>

<%= yield :scripts %>