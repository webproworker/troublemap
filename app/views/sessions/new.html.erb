<h1>Log in</h1>
<%= form_tag sessions_path do %>
  <%= label_tag :name %> 
  <%= text_field_tag :name, params[:name] %><br/>

  <%= label_tag :email %>
  <%= text_field_tag :email, params[:email] %><br/>

  <%= label_tag :password %>
  <%= password_field :password, params[:password] %><br/>

  <%= submit_tag "Log in" %>
  
<% end %>