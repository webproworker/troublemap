<%= form_for Comment.new, :url=> trouble_comments_url(@trouble), :method => :post, :html => { :class => "form-horizontal new-comment" } do |f| %>

  <div class="form-group display_none">
    <%= f.label :commenter, "Nume", class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :commenter, class: "form-control", :value => current_user.name%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, "Comentariul tau", class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_area :body, class: "form-control", placeholder: "Introdu comentariul tau aici" %>
    </div>
  </div>

  <div class="col-md-offset-2">
    <%= button_tag(:class => "btn btn-primary") do %>
      <i class="fa fa-sign-in"></i> Adauga comentariu
    <% end %>
  </div>

<% end %>
